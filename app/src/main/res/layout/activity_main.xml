<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="yiwen.com.myapplication.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_receive_notice"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="左边"
            android:textColor="#a1abb3"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/btn_send_notice"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="右边"
            android:textColor="#a1abb3"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/follow_task_indicate_line"
        android:layout_width="55dp"
        android:layout_height="2dp"
        android:background="@color/biaotilan" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.24dp"
        android:background="@color/fenge" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
